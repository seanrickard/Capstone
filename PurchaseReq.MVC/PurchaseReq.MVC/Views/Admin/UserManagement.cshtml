@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Identity.EntityFrameworkCore
@model IEnumerable<EmployeeWithDepartmentAndRoomAndRole>


@{
    ViewData["Title"] = "UserManagement";
}

<h2>User management</h2>

@if (true == false)
{
