@model BudgetCodeWithAmount


@{
    ViewData["Title"] = "Edit BudgetCode";
}

<h2>Edit BudgetCode</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditBudgetCode">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="BudgetCodeName" class="control-label">Name</label>
                <input asp-for="BudgetCodeName" class="form-control" />
                <span asp-validation-for="BudgetCodeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Active" /> @Html.DisplayNameFor(model => model.Active)
                    </label>
                </div>
            </div>

            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Type" /> @Html.DisplayNameFor(model => model.Type)
                    </label>
                </div>
            </div>


            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>

            @Html.HiddenFor(x => x.TotalAmount)
            @Html.HiddenFor(x => x.TimeStamp)
            @Html.HiddenFor(x => x.Id)
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

