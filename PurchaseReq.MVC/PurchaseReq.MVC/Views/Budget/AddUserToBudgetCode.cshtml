@model EmployeeBudgetViewModel


@{
    ViewData["Title"] = "AddUserToBudgetCode";
}

<h2>Add User ToBudgetCode</h2>


<form asp-controller="Budget" asp-action="AddUserToBudgetCode">
    <input type="hidden" name="@Model.UserId" value="@Model.UserId" />


    @Html.DropDownListFor(x => x.UserId, new SelectList(Model.Users, "Id", "FullName"), new { @class = "form-control" })
    <br />
    <input class="btn btn-primary" value="Add to Budget Code" type="submit" />
    <a asp-action="Index" class="btn btn-primary">Cancel</a>
    @Html.HiddenFor(x => x.BudgetCodeId)
</form>

