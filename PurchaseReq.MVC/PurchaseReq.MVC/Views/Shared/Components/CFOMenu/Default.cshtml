@model IEnumerable<PurchaseReq.MVC.Components.CFOMenuItem>

    <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown">Menu<b class="caret"></b></a>
        <ul class="dropdown-menu">
            @foreach (var menuItem in Model)
            {
                <li>
                    <a asp-controller=@menuItem.ControllerValue asp-action=@menuItem.ActionValue>@menuItem.DisplayValue</a>
                </li>
            }
        </ul>
    </li>
